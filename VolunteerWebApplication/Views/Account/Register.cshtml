@model RegisterVolunteerViewModel

@{
    ViewData["Title"] = "Εγγραφή νέου Εθελοντή";
    Layout = "_EmptyLayout";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>

        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12">
                <img src="~/images/unicrowd-logo.png" class="logo" />
            </div>

            <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
                    <form asp-controller="Account" asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="validation-text"></div>

                        <div class="form-group">
                            <label asp-for="Username" class="form-control-label">Όνομα χρήστη</label>
                            <input asp-for="Username" type="text" class="form-control" autocomplete="off">
                            <span asp-validation-for="Username" class="validation-text"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-control-label">Email</label>
                            <input asp-for="Email" type="text" class="form-control" autocomplete="off">
                            <span asp-validation-for="Email" class="validation-text"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-control-label">Κωδικός πρόσβασης</label>
                            <input asp-for="Password" type="password" class="form-control" autocomplete="off">
                            <span asp-validation-for="Password" class="validation-text"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-control-label">Επιβεβαίωση Κωδικού πρόσβασης</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="off">
                            <span asp-validation-for="ConfirmPassword" class="validation-text"></span>
                        </div>

                        <hr />

                        <div class="form-group">
                            <label asp-for="FirstName" class="form-control-label">Όνομα</label>
                            <input asp-for="FirstName" type="text" class="form-control" autocomplete="off">
                            <span asp-validation-for="FirstName" class="validation-text"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" class="form-control-label">Επώνυμο</label>
                            <input asp-for="LastName" type="text" class="form-control" autocomplete="off">
                            <span asp-validation-for="LastName" class="validation-text"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FatherName" class="form-control-label">Πατρώνυμο</label>
                            <input asp-for="FatherName" type="text" class="form-control" autocomplete="off">
                            <span asp-validation-for="FatherName" class="validation-text"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Phone" class="form-control-label">Τηλέφωνο</label>
                            <input asp-for="Phone" type="text" class="form-control" autocomplete="off">
                            <span asp-validation-for="Phone" class="validation-text"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="form-control-label">Διεύθυνση</label>
                            <input asp-for="Address" type="text" class="form-control" autocomplete="off">
                            <span asp-validation-for="Address" class="validation-text"></span>
                        </div>

                        @Html.AntiForgeryToken()

                        <div class="col-12 loginbttm">
                            <div class="col-12 login-btm login-button">
                                <button type="submit" class="btn btn-outline-primary">Εγγραφή</button>
                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary" role="button">Είσοδος</a>
                            </div>
                        </div>
                    </form>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            @TempData["ErrorMessage"]
                        </div>
                    }

                </div>
            </div>

            <div class="col-lg-3 col-md-2"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationLayout");

        <script>

            $(document).ready(function () {
            });
        </script>
    }
}