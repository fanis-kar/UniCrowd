@model UniversityWebApplication.Models.LoginForm

@{
    ViewData["Title"] = "Είσοδος";
    Layout = "_EmptyLayout";
}

<link href="~/css/login.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-key">
                <i class="fa fa-key" aria-hidden="true"></i>
            </div>
            <div class="col-lg-12 login-title">
                Είσοδος
            </div>

            <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
                    <form asp-controller="Account" asp-action="Login">
                        <div class="form-group">
                            <label asp-for="Username" class="form-control-label">USERNAME</label>
                            <input asp-for="Username" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-control-label">PASSWORD</label>
                            <input asp-for="Password" type="password" class="form-control" i>
                        </div>

                        <div class="col-lg-12 loginbttm">
                            <div class="col-lg-6 login-btm login-text">

                                @ViewBag.error_message
                                @ViewBag.success_message

                                <!-- Error Message -->
                            </div>
                            <div class="col-lg-6 login-btm login-button">
                                <button type="submit" class="btn btn-outline-primary">Είσοδος</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3 col-md-2"></div>
        </div>
    </div>
</div>